/**
 * Implements hook_schema_alter().
 */
function sduconnect_schema_alter(&$schema) {

  $fields = array(
    'field_related_faq',
    'field_related_product',
  );

  foreach ($fields as $name) {
    if (isset($schema["field_data_{$name}"])) {
      $schema["field_data_{$name}"]['fields']["{$name}_target_id"] = array(
        'type' => 'varchar',
        'length' => 255,
        'default' => '',
        'unsigned' => FALSE,
      );
      $schema["field_revision_{$name}"]['fields']["{$name}_target_id"] = array(
        'type' => 'varchar',
        'length' => 255,
        'default' => '',
        'unsigned' => FALSE,
      );
    }
  }

}
