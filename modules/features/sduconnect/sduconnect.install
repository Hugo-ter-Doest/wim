/**
 * Implements hook_install().
 */
function sduconnect_install() {
  $role = user_role_load_by_name('content moderator');
  user_role_grant_permissions($role->rid, array('view sduconnect info', 'administer sduconnect module'));

  $fields = array(
    'field_related_faq',
    'field_related_product',
  );

  foreach ($fields as $name) {
    db_change_field("field_data_{$name}", "{$name}_target_id", "{$name}_target_id", array(
      'type' => 'varchar',
      'length' => 255,
      'default' => '',
      'unsigned' => FALSE,
    ));
    db_change_field("field_revision_{$name}", "{$name}_target_id", "{$name}_target_id", array(
      'type' => 'varchar',
      'length' => 255,
      'default' => '',
      'unsigned' => FALSE,
    ));
  }

  field_cache_clear();
}

